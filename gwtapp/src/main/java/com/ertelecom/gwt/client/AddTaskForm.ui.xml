<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <g:DecoratorPanel>
        <g:FormPanel ui:field="form1" method="POST">
            <g:VerticalPanel spacing="10">
                <g:HorizontalPanel>
                    <g:Label text="ID:" width="100px"/>
                    <g:TextBox name="id" ui:field="idText"/>
                </g:HorizontalPanel>
                <g:HorizontalPanel>
                    <g:Label text="Name:" width="100px"/>
                    <g:TextBox name="name" ui:field="titleText"/>
                </g:HorizontalPanel>
                <g:HorizontalPanel>
                    <g:Label text="Status:" width="100px"/>
                    <g:ListBox name="status" ui:field="statusText">
                    </g:ListBox>
                </g:HorizontalPanel>
                <g:HorizontalPanel>
                    <g:Label text="Exucutor:" width="100px"/>
                    <g:ListBox name="executor" ui:field="executorText">
                    </g:ListBox>
                </g:HorizontalPanel>
                <g:HorizontalPanel>
                    <g:Label text="Owner:" width="100px"/>
                    <g:ListBox name="owner" ui:field="ownerText">
                    </g:ListBox>
                </g:HorizontalPanel>
                <g:HorizontalPanel>
                    <g:Label text="Description:" width="100px"/>
                    <g:TextBox name="description" ui:field="descText"/>
                </g:HorizontalPanel>
                <g:Button ui:field="btnSubmit">Сохранить</g:Button>
            </g:VerticalPanel>
        </g:FormPanel>
    </g:DecoratorPanel>
</ui:UiBinder>